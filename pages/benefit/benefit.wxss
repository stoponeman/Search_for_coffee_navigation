/* pages/benefit/benefit.wxss */
.container {
    min-height: 100vh;
    background: #f8f8f8;
    display: flex;
    align-items: center;
    justify-content: center;
}

.empty-state {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 60rpx 40rpx;
    width: 100%;
    box-sizing: border-box;
}

.empty-image {
    width: 280rpx;
    height: 280rpx;
    margin-bottom: 40rpx;
}

.empty-content {
    text-align: center;
    margin-bottom: 48rpx;
}

.empty-title {
    font-size: 34rpx;
    color: #333;
    font-weight: 500;
    margin-bottom: 16rpx;
}

.empty-desc {
    font-size: 28rpx;
    color: #999;
}

.benefits-tips {
    display: flex;
    justify-content: space-around;
    width: 100%;
    margin-bottom: 48rpx;
    padding: 20rpx;
    background: #fff;
    border-radius: 16rpx;
    box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.tips-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 20rpx;
}

.tips-icon {
    font-size: 40rpx;
    margin-bottom: 12rpx;
}

.tips-text {
    font-size: 24rpx;
    color: #666;
}

.action-button {
    background: linear-gradient(to right, #4CD9A9, #3ECBC0);
    color: #fff;
    padding: 20rpx 80rpx;
    border-radius: 40rpx;
    font-size: 30rpx;
    display: flex;
    align-items: center;
    box-shadow: 0 6rpx 20rpx rgba(76, 217, 169, 0.2);
    transition: all 0.3s ease;
}

.action-button:active {
    transform: scale(0.98);
    box-shadow: 0 4rpx 12rpx rgba(76, 217, 169, 0.15);
}

.arrow {
    margin-left: 8rpx;
    font-size: 24rpx;
}