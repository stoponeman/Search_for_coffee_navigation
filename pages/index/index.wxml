<view class="header" style="padding-top: {{statusBarHeight}}px; height: {{navBarHeight}}px;">
    <text class="header-text">快去喝咖啡了</text>
</view>
<view class="map-container">
    <map
            id="myMap"
            longitude="{{longitude}}"
            latitude="{{latitude}}"
            scale="{{scale}}"
            markers="{{markers}}"
            style="width: 100%; height: 100%;"
    />
</view>
<view class="body-container">
    <view class="search-container">
        <view class="search-box">
            <view class="search-icon">
                <image src="/images/location.png" mode="aspectFit" class="location-icon"/>
            </view>
            <input
                    type="text"
                    placeholder="你要去哪儿来一杯"
                    placeholder-class="placeholder-style"
                    class="search-input"
            />
        </view>
    </view>

