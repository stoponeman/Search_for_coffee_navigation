/**index.wxss**/
page {
    display: flex;
    flex-direction: column;
    height: 100vh;
}

.header {
    background: transparent;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 999;
}

.header-text {
    color: #000; /* 根据实际背景选择颜色 */
    font-size: 18px;
    font-weight: bold;

    /* 允许文字区域响应点击 */
    pointer-events: auto;

    /* 垂直居中 */
    position: absolute;
    bottom: 10px; /* 根据导航栏高度微调 */
    left: 50%;
    transform: translateX(-50%);
}

.map-container {
    width: 100%;
    height: 500rpx;
}

.body-container {
    width: 100%;
    flex: 1;
}

.search-container {
    padding: 20rpx;
    width: 100%;
    box-sizing: border-box;
}

.search-box {
    background-color: #fff;
    border-radius: 32rpx;
    padding: 16rpx 24rpx;
    display: flex;
    align-items: center;
    box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.search-icon {
    margin-right: 16rpx;
}

.location-icon {
    width: 32rpx;
    height: 32rpx;
}

.search-input {
    flex: 1;
    font-size: 28rpx;
    color: #333;
}

.placeholder-style {
    color: #999;
    font-size: 28rpx;
}

.function-grid {
    padding: 20rpx;
}

.grid-row {
    display: flex;
    justify-content: space-between;
    margin-bottom: 30rpx;
}

.grid-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 20%;
}

.icon-wrapper {
    width: 88rpx;
    height: 88rpx;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-bottom: 12rpx;
}

.function-icon {
    width: 44rpx;
    height: 44rpx;
}

.function-text {
    font-size: 24rpx;
    color: #333;
}

.section-title {
    font-size: 32rpx;
    font-weight: bold;
    color: #333;
    padding: 20rpx;
    margin-top: 20rpx;
}

.activity-section {
    padding: 0 20rpx;
}

.activity-grid {
    display: flex;
    gap: 20rpx;
}

.activity-item {
    flex: 1;
    background: #fff;
    border-radius: 12rpx;
    overflow: hidden;
    box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
    position: relative;
}

.activity-image {
    width: 100%;
    height: 160rpx;
    background: #f5f5f5;
}

.activity-info {
    padding: 16rpx;
}

.activity-title {
    font-size: 28rpx;
    font-weight: bold;
    color: #333;
    display: block;
    margin-bottom: 8rpx;
}

.activity-desc {
    font-size: 24rpx;
    color: #666;
    display: block;
}
