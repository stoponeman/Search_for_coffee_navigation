/* pages/mine/mine.wxss */
.container {
    min-height: 100vh;
    background: #f8f8f8;
    padding-bottom: env(safe-area-inset-bottom);
}

/* 头部样式 */
.header {
    background: transparent;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 999;
    height: 44px;
    display: flex;
    align-items: flex-end;
    justify-content: center;

}

.header-text {
    color: #000; /* 根据实际背景选择颜色 */
    font-size: 18px;
    font-weight: bold;

    /* 允许文字区域响应点击 */
    pointer-events: auto;

    /* 垂直居中 */
    position: absolute;
    bottom: 10px; /* 根据导航栏高度微调 */
    left: 50%;
    transform: translateX(-50%);
}

/* 用户信息样式 */
.user-info {
    margin-top: calc(env(safe-area-inset-top) + 88px);
    padding: 40rpx 32rpx;
    display: flex;
    align-items: center;
    background: #fff;
}

.avatar {
    width: 96rpx;
    height: 96rpx;
    border-radius: 48rpx;
    margin-right: 24rpx;
}

.user-detail {
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.username {
    font-size: 34rpx;
    color: #333;
    margin-bottom: 8rpx;
}

.user-id {
    font-size: 28rpx;
    color: #999;
}

/* 会员卡片样式 */
.member-card {
    margin: 24rpx 32rpx;
    background: linear-gradient(to right, #f5f5f5, #e8e8e8);
    border-radius: 16rpx;
    padding: 32rpx;
}

.member-title {
    display: flex;
    align-items: center;
    margin-bottom: 24rpx;
}

.title-text {
    font-size: 32rpx;
    font-weight: 500;
    color: #333;
    margin-right: 8rpx;
}

.vip-icon {
    width: 32rpx;
    height: 32rpx;
}

.member-info {
    display: flex;
    flex-direction: column;
    gap: 16rpx;
}

.member-progress {
    font-size: 28rpx;
    color: #666;
}

.progress-desc {
    margin-left: 16rpx;
    font-size: 26rpx;
    color: #999;
}

.member-miles {
    display: flex;
    align-items: baseline;
}

.miles-num {
    font-size: 48rpx;
    font-weight: bold;
    color: #333;
}

.miles-text {
    font-size: 28rpx;
    color: #666;
    margin-left: 8rpx;
}

.miles-desc {
    font-size: 26rpx;
    color: #999;
    margin-left: 24rpx;
}

.check-rights {
    font-size: 26rpx;
    color: #666;
    margin-left: auto;
}

/* 功能列表样式 */
.function-list {
    background: #fff;
    margin-top: 24rpx;
}

.function-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 32rpx;
    border-bottom: 1rpx solid #f5f5f5;
}

.item-left {
    display: flex;
    align-items: center;
}

.function-icon {
    width: 40rpx;
    height: 40rpx;
    margin-right: 16rpx;
}

.function-text {
    font-size: 30rpx;
    color: #333;
}

.item-right {
    display: flex;
    align-items: center;
}

.extra-info {
    font-size: 26rpx;
    color: #999;
    margin-right: 8rpx;
}

.arrow {
    font-size: 28rpx;
    color: #999;
}

.login-btn {
    background: transparent;
    color: #333;
    font-size: 34rpx;
    padding: 0;
    border: none;
    box-shadow: none;
    line-height: 1.5;
    font-weight: 400;
    margin: 0;
    text-align: left;
}

.login-btn::after {
    border: none;
}

.login-btn:active {
    opacity: 0.8;
}